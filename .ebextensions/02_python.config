container_commands:
  01_migrate:
    command: "source /opt/python/run/venv/bin/activate && python manage.py migrate --noinput"
    leader_only: true
option_settings:
  "aws:elasticbeanstalk:application:environment":
    DJANGO_SETTINGS_MODULE: "platform.settings.base"
    "PYTHONPATH": "/opt/python/current/app/hrsw:$PYTHONPATH"
  "aws:elasticbeanstalk:container:python":
    WSGIPath: platform/wsgi.py
    NumProcesses: 3
    NumThreads: 20
  "aws:elasticbeanstalk:container:python:staticfiles":
    "/static/": "static/"